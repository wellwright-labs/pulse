{
  "name": "@wellwright/pulse",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "fmt": {
    "exclude": ["*.md", "docs/"]
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --allow-env src/main.ts",
    "test": "deno test --allow-read --allow-write --allow-env",
    "check": "deno check src/main.ts",
    "compile": "deno compile --allow-read --allow-write --allow-run --allow-env --output pulse src/main.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/datetime": "jsr:@std/datetime@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  }
}
