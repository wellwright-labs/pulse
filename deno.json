{
  "name": "@wellwright/devex",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "publish": {
    "include": ["src/**/*.ts", "LICENSE", "README.md", "deno.json"],
    "exclude": ["src/**/*.test.ts", "src/__test__/**"]
  },
  "fmt": {
    "exclude": ["*.md", "docs/", ".zed/", "dist/"]
  },
  "lint": {
    "exclude": ["dist/"]
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --allow-env src/main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run",
    "check": "deno check src/main.ts",
    "compile": "deno compile --allow-read --allow-write --allow-run --allow-env --output dist/devex src/main.ts",
    "build": "deno task check && deno task test && deno task compile",
    "clean": "rm -rf ~/.config/devex dist && echo 'Cleaned ~/.config/devex and dist/'"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/datetime": "jsr:@std/datetime@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  }
}
